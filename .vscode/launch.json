        {
            "name": "RUN it!",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/gambit",
            "args": [
                "-f",
                "${workspaceFolder}/yaml_files/THDMIatQ.yaml"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/work",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
